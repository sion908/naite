---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const events = await getCollection('events');
const sortedEvents = events.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

// Pre-render content for modals
const eventsWithContent = await Promise.all(sortedEvents.map(async (event) => {
  const { Content } = await event.render();
  return { ...event, Content };
}));
